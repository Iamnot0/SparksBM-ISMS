# SparksBM ISMS Configuration
# Copy this file to sparksbm.env and modify as needed

# Service Ports
BACKEND_PORT=8070
FRONTEND_PORT=3001
KEYCLOAK_PORT=8080
POSTGRES_PORT=5432
RABBITMQ_PORT=15672
RABBITMQ_MGMT_PORT=15672

# Service URLs (for local development)
BACKEND_URL=http://localhost:8070
FRONTEND_URL=http://localhost:3001
KEYCLOAK_URL=http://localhost:8080
POSTGRES_HOST=localhost
RABBITMQ_URL=http://localhost:15672

# Keycloak Configuration
KEYCLOAK_REALM=sparksbm
KEYCLOAK_CLIENT=sparksbm
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASS=admin123

# PostgreSQL Configuration
POSTGRES_USER=sparksbm
POSTGRES_PASS=sparksbm123
POSTGRES_DB=sparksbm

# RabbitMQ Configuration
RABBITMQ_USER=guest
RABBITMQ_PASS=guest

# Java Configuration
JAVA_HOME=/usr/lib/jvm/java-21-openjdk-amd64

# Gradle Configuration (must be quoted due to spaces)
GRADLE_OPTS="-Dorg.gradle.daemon=true -Dorg.gradle.parallel=true -Dorg.gradle.caching=true"

# Frontend Environment Variables
VEO_DEFAULT_API_URL=http://localhost:8070
VEO_FORMS_API_URL=http://localhost:8070
VEO_HISTORY_API_URL=http://localhost:8070
VEO_REPORTING_API_URL=http://localhost:8070/api/reporting
VEO_ACCOUNTS_API_URL=http://localhost:8070
VEO_OIDC_URL=http://localhost:8080
VEO_OIDC_REALM=sparksbm
VEO_OIDC_CLIENT=sparksbm

# Timeouts (in seconds)
POSTGRES_WAIT_TIMEOUT=30
KEYCLOAK_WAIT_TIMEOUT=120
RABBITMQ_WAIT_TIMEOUT=60
BACKEND_WAIT_TIMEOUT=240
FRONTEND_WAIT_TIMEOUT=40

# Logging
LOG_DIR=/tmp/sparksbm-logs
BACKEND_LOG=/tmp/sparksbm-backend.log
FRONTEND_LOG=/tmp/sparksbm-frontend.log
