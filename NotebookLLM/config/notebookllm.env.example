# NotebookLLM Configuration
# Copy this file to notebookllm.env and modify as needed

# Service Ports
API_PORT=8000
FRONTEND_PORT=3002

# Service URLs (for local development)
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3002

# CORS Origins (comma-separated list)
CORS_ORIGINS=http://localhost:3002,http://localhost:3000,http://127.0.0.1:3002

# Frontend API Base URL (used by Nuxt config)
API_BASE_URL=http://localhost:8000

# Logging
LOG_DIR=/tmp/notebookllm-logs
API_LOG=/tmp/notebookllm-api.log
FRONTEND_LOG=/tmp/notebookllm-frontend.log

# Timeouts (in seconds)
API_STARTUP_TIMEOUT=10
FRONTEND_STARTUP_TIMEOUT=4

# Python Configuration
PYTHON_PATH=
