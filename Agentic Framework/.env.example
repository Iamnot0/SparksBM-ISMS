# Agentic Framework Configuration
# Copy this file to .env and modify as needed

# LLM Configuration - Gemini only
LLM_BACKEND=gemini
LLM_MODEL=
LLM_MAX_TOKENS=512

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
# Options: 'gemini-1.5-flash' (fast, recommended), 'gemini-1.5-pro' (more capable)

# Verinice ISMS Configuration
VERINICE_ENABLED=true
VERINICE_API_URL=http://localhost:8070

# Paths Configuration
# Path to SparksBM ISMS scripts directory (optional, will auto-detect if not set)
SPARKSBM_SCRIPTS_PATH=

# File Directories
OUTPUT_DIR=output

# Memory Settings
MAX_MEMORY_HISTORY=1000
